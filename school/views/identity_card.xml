<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        <template id="identity_card">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="student">
                    <t t-call="report.external_layout">
                        <div class="page" style="height: 2px;">
                            <div class="oe_structure" />
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <table width="25%" height="50px" style="border: 3px solid black;">
                                <tr>
                                    <td width="100%" align="center" height="30">
                                        <strong>
                                            <t t-if="student.school_id.name">
                                                <span t-field="student.school_id.name" />
                                            </t>
                                        </strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="center">
                                        <img t-if="student.photo" t-att-src="'data:image/png;base64,%s' % student.photo"
                                             style="height:120px;width=120px" />
                                    </td>
                                </tr>
                                <tr>
                                    <td height="10px"></td>
                                </tr>
                                <tr>
                                    <td align="center" height="30px">
                                        <strong t-if="student.name">
                                            <span t-field="student.name" />
                                        </strong>
                                        <strong t-if="student.middle">
                                            <span t-field="student.middle" />
                                        </strong>
                                        <strong t-if="student.last">
                                            <span t-field="student.last" />
                                        </strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td height="130">
                                        <table width="100%">
                                            <tr>
                                                <td style="font-family: 'Helvetica';padding-left:20px;">
                                                    <strong>Roll No.</strong>
                                                </td>
                                                <td>
                                                    <strong>: </strong>
                                                </td>
                                                <td>
                                                    <t t-if="student.roll_no">
                                                        <span t-field="student.roll_no" />
                                                    </t>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="font-family: 'Helvetica';padding-left:20px;">
                                                    <strong>Course</strong>
                                                </td>
                                                <td>
                                                    <strong>: </strong>
                                                </td>
                                                <td>
                                                    <t t-if="student.standard_id.stan_name">
                                                       <span t-field="student.standard_id.stan_name" />
                                                       (
                                                       <span t-field="student.division_id.name" />
                                                       )
                                                    </t>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="font-family: 'Helvetica';padding-left:20px;">
                                                    <strong>Medium</strong>
                                                </td>
                                                <td>
                                                    <strong>: </strong>
                                                </td>
                                                <td>
                                                    <t t-if="student.medium_id.name">
                                                        <span t-field="student.medium_id.name" />
                                                    </t>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="font-family: 'Helvetica';padding-left:20px;">
                                                    <strong>BirthDate</strong>
                                                </td>
                                                <td>
                                                    <strong>: </strong>
                                                </td>
                                                <td>
                                                    <t t-if="student.date_of_birth">
                                                        <span t-field="student.date_of_birth" />
                                                    </t>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="font-family: 'Helvetica';padding-left:20px;">
                                                    <strong>Blood Group</strong>
                                                </td>
                                                <td>
                                                    <strong>: </strong>
                                                </td>
                                                <td>
                                                    <t t-if="student.blood_group">
                                                        <span t-field="student.blood_group" />
                                                    </t>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</openerp>
