<!-- <!DOCTYPE html> -->

<odoo>

	<template id="result_label">
	    <t t-call="report.html_container">
	        <t t-foreach="docs" t-as="o">
	            <t t-call="report.external_layout">
	                <div class="page">
	                    <div class="oe_structure" />
	                     <table>
	                         <tr t-foreach="get_student_info(o.standard_id, o.standard_id.division_id, o.standard_id.medium_id, o.year_id)"
                                   t-as="student" style="border:1px solid black;">
	                             <td style="border:1px solid black;">
	                                 <div class="col-md-2">
	                                     <span t-esc="student['pid']"></span>
	                                 </div>
	                             </td>
	                             <td style="border:1px solid black;" height="100px">
	                                 <div class="col-md-2">
	                                     <img t-if="o.name" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', str(student), 500, 100)" style="padding-top:20px;width:250px;height:70px"/>
	                                 </div>
	                             </td>
	                         </tr>
	                     </table>
	                     </div>
	                </t>
	            </t>
	        </t>
	    </template>

</odoo>
